<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.springlec.base.dao.AdminBrandDao"> 
	
	<!-- 브랜드 개수 가져오기 -->	
	<select id="brandCnt" resultType="_int">
	
		select count(distinct(bname)) from brand;
		
	</select>


	<!-- 2024.02.21 snr : 브랜드 조회하기 -->
	<select id="list" resultType="com.springlec.base.model.BrandDto">
	
		select bname from brand group by bname
		
	</select>
	
	
	
	<!-- 2024.02.21 snr : 브랜드 상세 조회하기  -->
	<select id="detail" resultType="com.springlec.base.model.BrandDto">
	
		select bname from brand where bname = #{bname} group by bname 
	
	</select>
	
</mapper>